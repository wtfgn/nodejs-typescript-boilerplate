{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"noEmitOnError": true,
		"strict": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"outDir": "dist",
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}